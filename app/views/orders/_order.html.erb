<h3>Order</h3>

<p>Status: <%= @order.order_status %></p>

<h4>Line Items</h4>

<% @order.line_items.each do |line_item| %>
  <p>
    Product: <%= line_item.product.name %>
    <%= link_to 'Remove', [@restaurante, @shop, @order, line_item], method: :delete %>
  </p>
<% end %>

<!-- Add a line item -->
<% @products.each do |product| %>
  <%= form_with url: [@restaurante, @shop, @order, :line_items], method: :post do |form| %>
    <%= form.hidden_field :product_id, value: product.id %>
    <%= form.submit "Add #{product.name}" %>
  <% end %>
<% end %>