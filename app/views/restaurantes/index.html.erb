<div class="container h-100 mt-12">  <!-- This div and the one below will do center the card -->
  <div class="row h-100 justify-content-center align-items-center">
    <div class="card card_index shadow mb-5 bg-body rounded">
      <div class="card-header text-center">
        <h3>Restaurantes</h3>      
      <br/>
      <% if current_user&.role == 'owner' %>
        <div class='pb-3'>
          <%= link_to "New restaurante", new_restaurante_path %>
        </div>
      <% end %>
      </div>
      <table class="table table-hover">
        <div id="restaurantes">   
          <thead class="thead-dark">
            <tr>
              <th>Nombre</th>
              <th>Acciones</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @restaurantes.each do |restaurante| %>
            <tr>
              <td><%= restaurante.name %></td>
              <td><%= link_to "Ver", restaurante %> </td>
              <td><%= link_to "Borrar", restaurante, method: :delete, data: { confirm: 'Si lo borras perderas toda la informacion en este restaurante y incluyendo sus usuarios?' }, class: 'delete-link' %></td>
            </tr>
          <% end %>
          </tbody>
        </div>
      </table>
       <div class="card-footer text-center pb-3"><br/></div>
      </div>  
    </div>
  </div>
</div>