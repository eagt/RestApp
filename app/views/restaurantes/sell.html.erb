<div data-controller="sell">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-8 ">
          <!-- Content for the left card -->
          <!-- card-top with buttons -->
          <div class="card p-4">
              <h3> Top card</h3>
              <button class='btn btn-mesa', data-action="click->sell#showMesasCard" >
                Mesas
              </button>
          </div>
          <!-- card-top with buttons -->
          <div class="card p-4", data-sell-target='mesasCard'>
              <h3> Bottom card 1</h3>
              <h4>Mesas</h4>    
              <div class="row"> 
                  <% @tables.each do |table| %>
                      <button class="card card-mesas text-center pt-2" , data-action="click->sell#showProductsCard">                  
                          <%= table.number%>               
                      </button>                    
                  <% end %>
              </div>
          </div>  
          <div class="card p-4", data-sell-target='productsCard'>
            <h3> Bottom card 2</h3>
            <h4>Menu</h4>    
            <div class="row"> 
              <% @products.each do |product| %>
                <button class="card card-mesas text-center pt-2">                                    
                  <%= product.name%>               
                </button>                    
              <% end %>
            </div>
          </div>          
      </div>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <!-- Content for the right card -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>