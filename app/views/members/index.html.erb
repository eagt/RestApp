<div class="container h-100 mt-12">  <!-- This div and the one below will do center the card -->
  <div class="row h-100 justify-content-center align-items-center">
    <div class="card shadow mb-5 bg-body rounded">
        <div class="card-header text-center pb-1">
            <h3>Add a New Member</h3>
        </div>
        <div class="card-body text-center mt-3 mb-4">
            <%= form_with url: invite_restaurante_members_path  do |form| %>
                <%= form.text_field :email, placeholder: 'Email'%>
                <%= form.select :rte_role, Member.rte_roles %>
                <%= form.submit 'Invite'%>
            <% end %>    
        </div>
    </div>
</div>





