<div class="container h-100 mt-12">  <!-- This div and the one below will do center the card -->
  <div class="row h-100 justify-content-center align-items-center">
    <div class="card w-50 shadow mb-5 bg-body rounded">
      <div class="card-header text-center">
        <h2>Producto</h2>
      </div>
      <div class="card-body text-center">
        <%= form_with(model: [@restaurante, @product], local: true) do |form| %>
          <% if product.errors.any? %>
            <div style="color: red">
              <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
              <ul>
                <% product.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group row mb-3">
            <%= form.label :name, 'Nombre', class: 'col-sm-5 bold-label' %>
            <%= form.text_field :name, class: "col-sm-7" %>
          </div>
          <div class="form-group row mb-3">
            <%= form.label :selling_cost_unit, 'Precio', class: 'col-sm-5 bold-label' %>
            <%= form.text_field :selling_cost_unit, class: "col-sm-7" %>
          </div>
          <% if action_name == 'edit' %>
            <%= form.submit 'Actualizar Producto', class: 'btn btn-login' %>
          <% else %>
            <%= form.submit class: 'btn btn-login' %>
          <% end %>
        <% end %>
      </div>
      <div class="card-footer text-center pb-2">
        <div>
          <%= link_to "Show Product",restaurante_product_path(@restaurante, @product) if action_name == 'edit' %>
        </div>
        <div>
          <%= link_to "Products", restaurante_products_path(@restaurante) %>
        </div>
        <br/>
      </div>
    </div>
  </div>
</div>
