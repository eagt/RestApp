            <%= form.label :qty_measurement, class: 'col-sm-5 bold-label' %>
            <%= form.text_field :qty_measurement, class: "col-sm-7" %>
          </div>

          <div class="form-group row mb-3"> 
            <%= form.label :unit_measurement, class: 'col-sm-5 bold-label'%>
            <%= form.text_field :unit_measurement, class: "col-sm-7" %>
          </div>

          <div class="form-group row mb-3"> 
            <%= form.label :description, class: 'col-sm-5 bold-label'%>
            <%= form.text_area :description, class: "col-sm-7" %>
          </div>

          <div class="form-group row mb-3"> 
            <%= form.label :buying_cost_pck, class: 'col-sm-5 bold-label' %>
            <%= form.text_field :buying_cost_pck, class: "col-sm-7" %>
          </div>

          <div class="form-group row mb-3"> 
            <%= form.label :buying_cost_unit, class: 'col-sm-5 bold-label' %>
            <%= form.text_field :buying_cost_unit, class: "col-sm-7" %>
          </div>

          <div class="form-group row mb-3"> 
            <%= form.label :selling_cost_pck, class: 'col-sm-5 bold-label' %>
