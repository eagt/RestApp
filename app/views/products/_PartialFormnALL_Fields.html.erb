          <% end %>
          
          <div class="form-group row mb-3"> 
              <%= form.label :name, 'Nombre', class: 'col-sm-5 bold-label' %>            
              <%= form.text_field :name, class: "col-sm-7" %>
          </div>

          <div class="form-group row mb-3"> 
