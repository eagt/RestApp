            <%= form.label :selling_cost_unit, class: 'col-sm-5 bold-label' %>
            <%= form.text_field :selling_cost_unit, class: "col-sm-7" %>
          </div>

          <div class="form-group row mb-3"> 
            <%= form.label :production_cost, class: 'col-sm-5 bold-label' %>
            <%= form.text_field :production_cost, class: "col-sm-7" %>
          </div>

          <div class="form-group row mb-3"> 
            <%= form.label :qty_to_stock, class: 'col-sm-5 bold-label' %>
            <%= form.text_field :qty_to_stock, class: "col-sm-7" %>
          </div>

          <div class="form-group row mb-3"> 
            <%= form.label :qty_in_stock, class: 'col-sm-5 bold-label' %>
            <%= form.text_field :qty_in_stock, class: "col-sm-7" %>
          </div>

          <div class="form-group row mb-3"> 
            <%= form.label :current_stock_value, class: 'col-sm-5 bold-label' %>
            <%= form.text_field :current_stock_value, class: "col-sm-7" %>
          </div>

          <div class="form-group row mb-3"> 
            <%= form.label :created_by, class: 'col-sm-5 bold-label' %>
            <%= form.text_field :created_by, class: "col-sm-7" %>
          </div>-->       

        <% if action_name == 'edit' %>
          <%= form.submit 'Actualizar Producto', class: 'btn btn-login' %>
        <% else %>
          <%= form.submit 'Crear Producto', class: 'btn btn-login' %>
        <% end %>
      </div>
    <% end %>
    <div class="card-footer text-center pb-2">
    
    <div>
      <%= link_to "Show Product",restaurante_product_path(@restaurante, @product) if action_name == 'edit' %>
    </div>
    <div>
      <%= link_to "Products", restaurante_products_path(@restaurante) %>
    </div>
      <br/>
    </div>
  </div>
</div>
